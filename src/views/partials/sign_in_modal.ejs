<!-- Modal -->
<div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Please enter your Credentials</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-auto">
        <form method="POST" action="/user/login" class="form-inline ml-auto">
          <div class="form-group row">
            <label class="col-6" for="inputUsername">Enter UserName</label>
            <div class="col-6">
              <input id="inputUsername" class="form-control" type="text" required name="username">
            </div>
          </div>
          <div class="mt-3">
            <div class="form-group row">
              <label class="col-6" for="inputPassword">Enter Password</label>
              <div class="col-6">
                <input id="inputPassword" class="form-control" type="password" required name="password">
              </div>
            </div>
            <button class="d-block ml-3 mt-3 btn btn-primary d-block btn-lg" type="submit">
              Sign In
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>