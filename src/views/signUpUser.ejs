<%- include('partials/_header'); -%>

  <main class="container mx-auto">
    <h2 class="text-center"><%= title %></h2>
    <form data-toggle="validator" role="form" class="w-50 mx-auto" method="POST" action="/user/signup">
      <div class="form-group">
        <label for="usernameInput">Enter a Username</label>
        <input 
            type="text" 
            class="form-control" 
            id="usernameInput"
            required
            name="username"
        />
      </div>
      <div class="form-group">
        <label for="emailInput">Enter a Email address</label>
        <input 
            type="email" 
            class="form-control" 
            id="emailInput"
            required
            name="email"
        />
      </div>
      <div class="form-group">
        <label for="passwordInput">Enter a Password</label>
        <input 
            type="password" 
            class="form-control" 
            id="passwordInput"
            required
            name="password"
        />
      </div>
      <button type="submit" class="btn-login btn-custom-dark">Sign Up</button>
    </form>
  </main>

<%- include('partials/_footer'); -%>